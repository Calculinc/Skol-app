<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rect_matsedel_days"
        android:elevation="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:animateLayoutChanges="true">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_bar"
            android:secondaryProgressTint="#00ffffff" />

        <Button
            android:gravity="center"
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:text="@string/Buttontext_rösta"
            android:textSize="15sp"
            android:onClick="röstning"
            android:textStyle="normal"
            android:elevation="3dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorMatBeltButtonText"
            android:background="@drawable/rect_matsedel_button"/>

        </LinearLayout>

</LinearLayout>