<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calculinc.google.httpssites.skol_app.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/login_gradient_background"
        android:animateLayoutChanges="true">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/nr_logga_fixed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rect_login_big"
            android:orientation="vertical"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/login_textbox"
                    android:id="@+id/name1"
                    android:paddingStart="16dp"
                    android:hint="@string/Hint_förnamn"
                    android:inputType="textCapSentences"
                    android:digits="abcdefghijklmnopqrstuvwxyzåäöABCDEFGHIJKLMNOPQRSTUVWXYZÅÄÖ-"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint"
                    android:background="@drawable/rect_login_textbox"
                    android:layout_weight="4"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1" >

                    <View
                        android:id="@+id/checkbox_name"
                        android:layout_height="@dimen/login_check_box_size"
                        android:layout_width="@dimen/login_check_box_size" />

                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLoginRectLines">
                </View>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/login_textbox"
                    android:id="@+id/name2"
                    android:paddingStart="16dp"
                    android:hint="@string/Hint_efternamn"
                    android:inputType="textCapSentences"
                    android:digits="abcdefghijklmnopqrstuvwxyzåäöABCDEFGHIJKLMNOPQRSTUVWXYZÅÄÖ-"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint"
                    android:background="@drawable/rect_login_textbox"
                    android:layout_weight="4"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1" >

                    <View
                        android:id="@+id/checkbox_surname"
                        android:layout_height="@dimen/login_check_box_size"
                        android:layout_width="@dimen/login_check_box_size" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLoginRectLines">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/login_textbox"
                    android:id="@+id/mobile_number"
                    android:hint="@string/Hint_telefon"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint"
                    android:background="@drawable/rect_login_textbox"
                    android:layout_weight="4"
                    android:paddingStart="16dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1" >

                    <View
                        android:id="@+id/checkbox_telephone"
                        android:layout_height="@dimen/login_check_box_size"
                        android:layout_width="@dimen/login_check_box_size" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLoginRectLines">
                </View>


                <EditText
                    android:id="@+id/personalid"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/login_textbox"
                    android:hint="@string/Hint_personnummer"
                    android:paddingStart="16dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint"
                    android:background="@drawable/rect_login_textbox"
                    android:layout_weight="4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1" >

                    <View
                        android:id="@+id/checkbox_personalid"
                        android:layout_height="@dimen/login_check_box_size"
                        android:layout_width="@dimen/login_check_box_size" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLoginRectLines">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/login_textbox"
                    android:id="@+id/passcode"
                    android:hint="@string/Hint_passcod"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint"
                    android:background="@drawable/rect_login_textbox"
                    android:layout_weight="4"
                    android:paddingStart="16dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1" >

                    <View
                        android:id="@+id/checkbox_passcode"
                        android:layout_height="@dimen/login_check_box_size"
                        android:layout_width="@dimen/login_check_box_size" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLoginRectLines">
                </View>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/login_textbox"
                    android:id="@+id/nova_code"
                    android:paddingStart="16dp"
                    android:hint="@string/Hint_novacode"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint"
                    android:background="@drawable/rect_login_textbox"
                    android:layout_weight="4" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1" >

                    <View
                        android:id="@+id/checkbox_nova_code"
                        android:background="@drawable/ic_info_outline_black_24dp"
                        android:clickable="true"
                        android:onClick="infoClick"
                        android:layout_height="@dimen/login_check_box_size"
                        android:layout_width="@dimen/login_check_box_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/Buttontext_logga_in"
            android:textStyle="normal"
            android:textColor="@color/colorLoginButtonText"
            android:background="@drawable/rect_login_button"
            android:onClick="loginSubmit"
            android:elevation="3dp"/>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/Buttontext_logga_ut"
            android:textStyle="normal"
            android:textColor="@color/colorLoginButtonText"
            android:background="@drawable/rect_login_button"
            android:onClick="logoutSubmit"
            android:elevation="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorLoginRegisterText"
            android:textColorLink="@color/colorLoginLinkText"
            android:text="@string/register_link"
            android:id="@+id/register_link" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
