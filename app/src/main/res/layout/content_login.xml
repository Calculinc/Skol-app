<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calculinc.google.httpssites.skol_app.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorLoginBackground">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:src="@drawable/applogga" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="3dp" >

                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/name1"
                    android:layout_marginTop="32dp"
                    android:paddingLeft="8dp"
                    android:hint="@string/Hint_förnamn"
                    android:inputType="textCapSentences"
                    android:digits="abcdefghijklmnopqrstuvwxyzåäöABCDEFGHIJKLMNOPQRSTUVWXYZÅÄÖ-"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint" />

                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile_number"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="8dp"
                    android:hint="@string/Hint_telefon"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint" />

                <EditText
                    android:id="@+id/personalid"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/Hint_personnummer"
                    android:paddingLeft="8dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="3dp" >

                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/name2"
                    android:layout_marginTop="32dp"
                    android:paddingLeft="8dp"
                    android:hint="@string/Hint_efternamn"
                    android:inputType="textCapSentences"
                    android:digits="abcdefghijklmnopqrstuvwxyzåäöABCDEFGHIJKLMNOPQRSTUVWXYZÅÄÖ-"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint" />

                <EditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/city"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="8dp"
                    android:hint="@string/Hint_stad"
                    android:inputType="textCapSentences"
                    android:digits="abcdefghijklmnopqrstuvwxyzåäöABCDEFGHIJKLMNOPQRSTUVWXYZÅÄÖ-"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint" />

                <Spinner
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:dropDownSelector="@color/colorLoginDropdownSelected"
                    android:id="@+id/fidget_spinner"
                    android:textColor="@color/colorLoginText"
                    android:textColorHint="@color/colorLoginTextHint"
                    android:popupBackground="@color/colorLoginDropdownBackground" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="303dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:clipChildren="false">

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:text="@string/Buttontext_logga_in"
                android:textStyle="normal"
                android:textColor="@color/colorLoginButtonText"
                android:background="@drawable/rect_login_button"
                android:onClick="loginSubmit" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:text="@string/Buttontext_logga_ut"
                android:textStyle="normal"
                android:textColor="@color/colorLoginButtonText"
                android:background="@drawable/rect_login_button"
                android:onClick="logoutSubmit" />

        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
