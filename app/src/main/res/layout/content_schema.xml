<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="calculinc.google.httpssites.skol_app.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:gravity="center"
            android:elevation="3dp" >

            <Switch
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/the_switch"
                android:hint="Dag/Vecka"
                android:textColorHint="@color/colorText"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:dropDownSelector="@color/colorPrimary"
                android:background="@drawable/text_box_spinner_alt"
                android:id="@+id/typ_spinner"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:popupBackground="@color/colorBackground" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint=""
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorHint"
                android:inputType="text"
                android:id="@+id/schemaIDEditText"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:cursorVisible="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical"
                android:id="@+id/vänsterPOOSH"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/relativt_vänster"
                android:clipChildren="false"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="6sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="08"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="09"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="11"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="12"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="13"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="14"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="15"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="16"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="17"
                    android:background="@drawable/schema_timeline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/schema_vecka"
                android:layout_weight="8">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_schema1"
                    android:clipChildren="false"
                    android:layout_weight="2"
                    android:background="@color/colorSchemaBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:background="@drawable/day_box"
                                android:text="Mån"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textSize="0sp"
                            android:layout_weight="10"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_sep1"
                    android:clipChildren="false" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_schema2"
                    android:clipChildren="false"
                    android:layout_weight="2"
                    android:background="@color/colorSchemaBackground" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:background="@drawable/day_box"
                                android:text="Tis"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textSize="0sp"
                            android:layout_weight="10"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_sep2"
                    android:clipChildren="false" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_schema3"
                    android:clipChildren="false"
                    android:layout_weight="2"
                    android:background="@color/colorSchemaBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:background="@drawable/day_box"
                                android:text="Ons"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textSize="0sp"
                            android:layout_weight="10"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_sep3"
                    android:clipChildren="false" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_schema4"
                    android:clipChildren="false"
                    android:layout_weight="2"
                    android:background="@color/colorSchemaBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:background="@drawable/day_box"
                                android:text="Tor"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textSize="0sp"
                            android:layout_weight="10"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_sep4"
                    android:clipChildren="false" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/relativt_schema5"
                    android:clipChildren="false"
                    android:layout_weight="2"
                    android:background="@color/colorSchemaBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:background="@drawable/day_box"
                                android:text="Fre"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textSize="0sp"
                            android:layout_weight="10"/>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/relativt_höger"
                android:clipChildren="false"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="6sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="08"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="09"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="10"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="11"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="12"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="13"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="14"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="15"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="16"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    android:text="17"
                    android:background="@drawable/schema_linetime"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical"
                android:id="@+id/högerPOOSH"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
